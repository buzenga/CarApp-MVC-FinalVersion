@using CarApp.ViewModels
@model CreateCarViewModel


<form method="post" asp-action="Create">
  <div class="form-group">
    <label asp-for="PlateNumber">Plate Number</label>
    <input asp-for="PlateNumber" class="form-control" placeholder="Plate Number">
    <span asp-validation-for="PlateNumber" class="text-danger"></span>
  </div>
  <div class="form-group">
    <label asp-for="Model">Model</label>
    <input asp-for="Model" class="form-control" placeholder="Model">
    <span asp-validation-for="Model" class="text-danger"></span>
  </div>
  <div class="form-group">
    <label asp-for="Producer">Producer Brand</label>
    <input asp-for="Producer" class="form-control" placeholder="Producer Brand">
    <span asp-validation-for="Producer" class="text-danger"></span>
  </div>
  <br />
  <button type="submit" class="btn btn-primary">Create new Car</button>
  <a asp-controller="Home" asp-action="Index">Back to MainPage</a>
</form>
