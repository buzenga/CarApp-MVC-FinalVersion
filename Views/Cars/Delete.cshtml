@model Car

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete Car</h1>

<h3>Are you sure, you want to delete this car?</h3>
<div>
    <h4>Car ID: @Model.ID</h4>
    <hr />
    <dl class="row">

        <dt class = "col-sm-2">
            Plate number:
        </dt>
        <dd class = "col-sm-10">
            @Model.PlateNumber
        </dd>
        <dt class = "col-sm-2">
            Brand Name:
        </dt>
        <dd class = "col-sm-10">
            @Model.Producer
        </dd>
        <dt class = "col-sm-2">
            Model:
        </dt>
        <dd class = "col-sm-10">
            @Model.Model
        </dd>
        <dt class = "col-sm-2">
            Owner:
        </dt>
        @if(Model.Owner == null)
            {
                <dd class = "col-sm-10" style="color: red;">

                    No owner
            </dd>
        }
        else
        {
            <dd class = "col-sm-10">

                @Model.Owner.FirstName @Model.Owner.LastName
            </dd>
        }
        
    </dl>
    
    <form  method="post" asp-action="Delete">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to list</a>
    </form>
</div>
