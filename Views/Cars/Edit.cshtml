@using CarApp.ViewModels
@model CreateCarViewModel

<form method="post" asp-action="Edit">
    <input type="hidden" value="ID" id="ID" />
    <div class="form-group">
        <label asp-for="PlateNumber">Plate Number</label>
        <input asp-for="PlateNumber" class="form-control" placeholder="Plate Number"/>
        <span asp-validation-for="PlateNumber" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Producer">Brand Name</label>
        <input asp-for="Producer" class="form-control" placeholder="Brand Name"/>
        <span asp-validation-for="Producer" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Model">Model Name</label>
        <input asp-for="Model" class="form-control" placeholder="Model Name"/>
        <span asp-validation-for="Model" class="text-danger"></span>
    </div>

  <button type="submit" class="btn btn-primary">Submit Change</button>
  <a asp-action="Index">Back to list</a>
</form>
